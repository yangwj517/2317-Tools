<Window x:Class="ECC_Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="工具箱" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 工具箱区域 -->
        <Border Grid.Column="0" Background="#F0F0F0" Padding="10">
            <ListBox x:Name="ToolList" SelectionMode="Single">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Image Source="{Binding Icon}" Width="24" Height="24" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- 工具内容区域 -->
        <Border Grid.Column="1" Background="White" Padding="10">
            <!-- 这里显示选中工具的内容 -->
            <ContentControl x:Name="ToolContent"/>
        </Border>
    </Grid>
</Window>