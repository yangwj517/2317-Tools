<UserControl x:Class="TempBatch.TempBatchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TempBatch"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    <ScrollViewer Margin="10" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="5">
            <TextBlock Text="文件批量生成器" FontSize="18" FontWeight="Bold" Foreground="DarkBlue" Margin="0,0,0,20"/>
            <!-- 文件选择区域 -->
            <GroupBox Header="文件选择" Padding="10" Margin="0,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Excel文件路径:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="FilePathTextBox" Margin="5" IsReadOnly="True"/>
                    <Button Grid.Row="0" Grid.Column="2" Content="选择文件" Click="SelectExcelFile_Click" Margin="5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Sheet名称:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" x:Name="SheetComboBox" Margin="5"/>
                    <Button Grid.Row="1" Grid.Column="2" Content="加载Sheet" Click="LoadSheet_Click" Margin="5"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="模板文件路径:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="TempFilePathTextBox" Margin="5" IsReadOnly="True"/>
                    <Button Grid.Row="2" Grid.Column="2" Content="选择文件" Click="SelectTemplateFile_Click" Margin="5"/>
                </Grid>
            </GroupBox>

            <!-- 参数设置区域 -->
            <GroupBox Header="参数设置" Padding="10" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 生成文件数量 -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="生成文件数量：" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="FileCountTextBox" 
                             Margin="5" 
                             PreviewTextInput="IntegerTextBox_PreviewTextInput"
                             DataObject.Pasting="IntegerTextBox_Pasting"/>

                    <!-- 文件名格式 -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="文件名格式：" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="FileNameFormatTextBox" Margin="5" HorizontalAlignment="Stretch"/>
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="支持参数：#{参数名} 及 {序号}" VerticalAlignment="Center" Foreground="Gray"/>
                </Grid>
            </GroupBox>

            <!-- 数据预览区域 -->
            <GroupBox Header="数据预览" Padding="10" Margin="0,0,0,10">
                <DataGrid x:Name="PreviewDataGrid" 
                          AutoGenerateColumns="True"
                          CanUserSortColumns="True"
                          CanUserResizeColumns="True"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          MaxHeight="500"/>
            </GroupBox>

            <!-- 参数映射配置区域 -->
            <GroupBox Header="参数映射配置" Padding="10" Margin="0,0,0,10">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" MaxHeight="400">
                    <StackPanel x:Name="ParameterMappingPanel">
                        <TextBlock x:Name="NoParametersText" 
                                   Text="请选择模板文件并点击参数解析以加载参数配置项" 
                                   Foreground="Gray" Margin="5"/>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>

            <!-- 操作按钮区域 -->
            <GroupBox Header="操作" Padding="10" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <Button Content="参数解析" Click="TemplateParam_Click" Margin="5" Padding="10,5" FontSize="14"/>
                    <Button Content="生成文件" Click="GenerateFiles_Click" Margin="5" Padding="10,5" FontSize="14"/>
                    <Button Content="清空配置" Click="Clear_Click" Margin="5" Padding="10,5" FontSize="14"/>
                    <CheckBox x:Name="MergeFilesCheckBox" Content="合并生成的文件" Margin="15,5,5,5" VerticalAlignment="Center"/>
                </StackPanel>
            </GroupBox>

            <!-- 状态信息区域 -->
            <Border Background="LightYellow" Padding="10" Margin="0,10,0,0" CornerRadius="3">
                <TextBlock x:Name="StatusText" Text="请选择Excel文件开始配置" TextWrapping="Wrap"/>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
    