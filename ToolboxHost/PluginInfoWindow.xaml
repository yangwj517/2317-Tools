<Window x:Class="ToolboxHost.PluginInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="插件信息" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        MinWidth="500"
        MinHeight="400"
        Icon="/Resource/Inf.ico">

    <Window.Resources>
        <Style x:Key="InfoLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Width" Value="80"/>
        </Style>

        <Style x:Key="InfoValueStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="10,5"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="SteelBlue"/>
            <Setter Property="Margin" Value="10,15,10,10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="10">
            <StackPanel>
                <!-- 插件基本信息 -->
                <TextBlock Text="基本信息" Style="{StaticResource SectionHeaderStyle}"/>

                <Grid Margin="10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 插件名称 -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="名称:" Style="{StaticResource InfoLabelStyle}"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding PluginName}" Style="{StaticResource InfoValueStyle}"/>

                    <!-- 版本 -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="版本:" Style="{StaticResource InfoLabelStyle}"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding PluginVersion}" Style="{StaticResource InfoValueStyle}"/>

                    <!-- 描述 -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="描述:" Style="{StaticResource InfoLabelStyle}"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding PluginDescription}" Style="{StaticResource InfoValueStyle}" TextWrapping="Wrap"/>

                    <!-- 作者 -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="作者:" Style="{StaticResource InfoLabelStyle}"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding PluginAuthor}" Style="{StaticResource InfoValueStyle}"/>

                    <!-- 启用状态 -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="启用状态:" Style="{StaticResource InfoLabelStyle}"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding PluginEnabled}" Style="{StaticResource InfoValueStyle}"/>

                    <!-- 创建时间 -->
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="创建时间:" Style="{StaticResource InfoLabelStyle}"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding PluginCreated}" Style="{StaticResource InfoValueStyle}"/>

                    <!-- 更新时间 -->
                    <TextBlock Grid.Row="6" Grid.Column="0" Text="更新时间:" Style="{StaticResource InfoLabelStyle}"/>
                    <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding PluginUpdated}" Style="{StaticResource InfoValueStyle}"/>
                </Grid>

                <!-- 依赖项信息 -->
                <TextBlock Text="依赖项" Style="{StaticResource SectionHeaderStyle}"/>
                <Border BorderBrush="LightGray" BorderThickness="1" Background="WhiteSmoke" Padding="10" Margin="10,0,10,10">
                    <StackPanel>
                        <ItemsControl ItemsSource="{Binding PluginDependencies}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Margin="0,2" Foreground="DarkSlateGray"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock x:Name="NoDependenciesText" Text="无依赖项" Foreground="Gray" FontStyle="Italic"
                                   HorizontalAlignment="Center" Margin="0,10" Visibility="Collapsed"/>
                    </StackPanel>
                </Border>

                <!-- 设置信息 -->
                <TextBlock Text="配置设置" Style="{StaticResource SectionHeaderStyle}"/>
                <Border BorderBrush="LightGray" BorderThickness="1" Background="WhiteSmoke" Padding="10" Margin="10,0,10,10">
                    <StackPanel>
                        <ItemsControl ItemsSource="{Binding PluginSettings}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                        <TextBlock Text="{Binding Key}" FontWeight="Bold" Margin="0,0,5,0" Foreground="DarkBlue"/>
                                        <TextBlock Text=": "/>
                                        <TextBlock Text="{Binding Value}" Foreground="DarkSlateGray"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock x:Name="NoSettingsText" Text="无配置设置" Foreground="Gray" FontStyle="Italic"
                                   HorizontalAlignment="Center" Margin="0,10" Visibility="Collapsed"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- 关闭按钮 -->
        <Button Grid.Row="1" Content="关闭" Click="CloseButton_Click" 
                HorizontalAlignment="Center" 
                Margin="0,10" 
                Padding="20,5" 
                Width="100"/>
    </Grid>
</Window>