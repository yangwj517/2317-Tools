<Window x:Class="ToolboxHost.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="输入" Height="150" Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="70"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Name="PromptText" Margin="0,0,0,10"/>
        <TextBox Grid.Row="1" Name="InputTextBox" Height="25" 
                 Text="{Binding Answer, UpdateSourceTrigger=PropertyChanged}"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="确定" IsDefault="True" Click="OKButton_Click"/>
            <Button Content="取消" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>